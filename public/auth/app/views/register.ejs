<div class="card">
    <div class="header">
        <h4 class="title">Register</h4>
        <p class="category">Already have an account? <a href="login">Click here</a> to login!</p>
    </div>
    <div class="content">
        <form name="loginForm" class="text-center" novalidate>

            <div class="form-group text-left">
                <label>Email</label>
                <input type="email" name="email" ng-model="user.email" class="form-control" required>
            </div>
            <div class="form-group text-left">
                <label>Name</label>
                <input type="text" ng-model="user.name" class="form-control" required>
            </div>
            <div class="form-group text-left">
                <label>Password</label>
                <input type="password" name="password" ng-model="user.password" class="form-control" required>
            </div>
            <div class="form-group text-left">
                <label>Repeat password</label>
                <input type="password" name="password" ng-model="user.repeatpassword" class="form-control" required>
            </div>
            <br>
            <button type="submit" class="btn btn-default btn-block" ng-click="register(user)">Register</button>
        </form>

        <div class="footer">
            <hr>
            <div class="stats {{ message_class }}">
                {{ message }}
            </div>
        </div>
    </div>
</div>