    <script src="app/app.js"></script>

    <script src="app/controllers/findCtrl.js"></script>
    <script src="app/controllers/classesCtrl.js"></script>
    <script src="app/controllers/studentsCtrl.js"></script>
    <script src="app/controllers/settingsCtrl.js"></script>

    <script src="app/services/userServices.js"></script>
    <script src="app/services/studentsServices.js"></script>
    <script src="app/services/classesServices.js"></script>

    <!-- Bootstrap core CSS     -->
    <link href="assets/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Animation library for notifications   -->
    <link href="assets/css/animate.min.css" rel="stylesheet" />

    <!--  Light Bootstrap Table core CSS    -->
