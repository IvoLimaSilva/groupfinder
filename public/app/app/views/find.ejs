<div class="container-fluid">
    <div class="row">

        <!-- START OF PREVIEW PROFILE -->

        <div class="col-md-4">
            <div class="card card-user hide-on-mobile">
                <div class="image">
                    <img src="assets/img/cover.jpg" />
                </div>
                <div class="content">
                    <div class="author">
                        <a href="#">
                            <img class="avatar border-gray" src="{{ curr_user.avatar }}" alt="..." />
                            <h4 class="title">
                                {{ curr_user.name }}
                                <br>
                                <small>(preview)</small>
                            </h4>
                        </a>
                    </div>
                    <br>
                    <hr>
                    <br>
                    <p class="description text-center">
                        {{ classToLoad.about }}
                    </p>
                    <br>
                    <hr>
                    <div class="text-center">

                        <a ng-hide="!curr_user.facebook" href="{{ 'http://' + curr_user.facebook }}" target="_blank" class="btn btn-simple"><i class="fa fa-facebook-square"></i></a>
                        <a ng-hide="!curr_user.github" href="{{ 'http://' + curr_user.github }}" target="_blank" class="btn btn-simple"><i class="fa fa-github"></i></a>
                        <a href="mailto: {{ curr_user.email }}" target="_blank" class="btn btn-simple"><i class="fa fa-envelope-o"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <!-- END OF PREVIEW PROFILE -->

        <!-- START OF CLASSES -->

        <div class="col-md-4">
            <div class="card">
                <div class="header">
                    <h4 class="title">Your Classes</h4>
                </div>
                <div class="content">
                    <form>
