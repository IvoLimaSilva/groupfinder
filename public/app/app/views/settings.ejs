<div class="container-fluid">
    <div class="row">

        <!-- START OF EDIT PROFILE -->

        <div class="col-md-8">
            <div class="card">
                <div class="header">
                    <h4 class="title">Edit Profile</h4>
                </div>
                <div class="content">
                    <form>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Name</label>
                                    <input type="text" class="form-control" ng-model="profile.name" placeholder="Full name" value="{{ curr_user.name }}">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>E-mail (disabled)</label>
                                    <input type="text" class="form-control" value="{{ curr_user.email }}" disabled>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Facebook Profile</label>
                                    <input type="text" class="form-control" value="{{ curr_user.facebook }}" placeholder="facebook.com/your_link" ng-model="profile.facebook">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Github Profile</label>
                                    <input type="text" class="form-control" value="{{ curr_user.github }}" placeholder="github.com/your_link" ng-model="profile.github">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <label class="pull-left">
                                <span class="{{ profile_message_class }}"><br>
                                    {{ profile_message }}
                                    <span ng-show="profile_message_class == 'information'" class="pe-7s-check"></span>
                                <span ng-show="profile_message_class == 'error'" class="pe-7s-close-circle"></span>
                                </span>
                            </label>
                            <button type="submit" class="btn btn-info btn-fill pull-right" ng-click="updateProfile(profile)">Update Profile</button>
                        </div>
                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>

            <!-- END OF EDIT PROFILE -->

            <!-- START OF EDIT PASSWORD -->

            <div class="card">
                <div class="header">
                    <h4 class="title">Edit Password</h4>
                </div>
                <div class="content">
                    <form>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Password</label>
                                    <input type="password" class="form-control" ng-model="password.old">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>New password (requires you to fill password field)</label>
                                    <input type="password" class="form-control" ng-disabled="!password.old" ng-model="password.new">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <label class="pull-left">
                                <span class="{{ password_message_class }}"><br>
                                    {{ password_message }}
                                    <span ng-show="password_message_class == 'information'" class="pe-7s-check"></span>
                                <span ng-show="password_message_class == 'error'" class="pe-7s-close-circle"></span>
                                </span>
                            </label>
                            <button type="submit" class="btn btn-info btn-fill pull-right" ng-click="updatePassword(password)">Update Password</button>
                        </div>
                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>
        </div>

        <!-- END OF EDIT PASSWORD -->

        <!-- START OF PREVIEW PROFILE -->

        <div class="col-md-4">
            <div class="card card-user card-mini">
                <div class="image">
                    <img src="assets/img/cover.jpg"/>
                </div>
                <div class="content">
                    <div class="author">
                        <a href="#">
                            <img class="avatar border-gray" src="{{ curr_user.avatar }}" alt="..." />
                            <h4 class="title">{{ profile.name }}</h4>
                        </a>
                    </div>
                    <br>
                    <hr>
                    <br>
                    <form ng-app="fileUpload" name="form" class="text-center">
                        <button class="btn btn-info btn-fill btn-sm" accept="image/jpg" ngf-select ng-model="file">
                            Upload new photo
                        </button>
                        <br>
                        <span class="{{ password_message_class }}"><br>
                            {{ picture_message }}
                            <span ng-show="picture_message_class == 'information'" class="pe-7s-check"></span>
                        <span ng-show="picture_message_class == 'error'" class="pe-7s-close-circle"></span>
                        </span>
                    </form>
                </div>
                <hr>
                <div class="text-center">
                    <a href="{{ 'http://' + (profile.facebook || 'facebook.com') }}" target="_blank" class="btn btn-simple"><i class="fa fa-facebook-square"></i></a>
                    <a href="{{ 'http://' + (profile.github || 'github.com') }}" target="_blank" class="btn btn-simple"><i class="fa fa-github"></i></a>
                    <a href="mailto: {{ user.email }}" target="_blank" class="btn btn-simple"><i class="fa fa-envelope-o"></i></a>
                </div>
            </div>
        </div>

        <!-- END OF PREVIEW PROFILE -->

    </div>

</div>